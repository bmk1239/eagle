name: Build Israel EPG

on:
  schedule:
    - cron: '0 4 * * *' # every day at 04:00 UTC
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Install Perl dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y build-essential \
            libxml-parser-perl \
            libxml-simple-perl \
            libdatetime-perl \
            libwww-perl \
            libjson-perl \
            libhtml-parser-perl \
            libterm-readkey-perl \
            libfile-slurp-perl \
            git

      - name: Clone and build XMLTV with tv_grab_il
        run: |
          git clone https://github.com/XMLTV/xmltv.git
          cd xmltv
          ./configure
          make
          sudo make install
          which tv_grab_il

      - name: Generate EPG with tv_grab_il
        run: |
          mkdir -p epg
          tv_grab_il --output epg/epg_il.xml --days 3 --quiet

      - name: Commit and push guide
        uses: stefanzweifel/git-auto-commit-action@v4
        with:
          commit_message: "üóìÔ∏è Daily EPG update (Israel)"
          file_pattern: epg/epg_il.xml
