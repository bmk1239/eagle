name: Build Israel EPG

on:
  schedule:
    - cron: '0 4 * * *'  # Daily at 04:00 UTC
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Install Perl and build dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y build-essential cpanminus libxml-simple-perl libdatetime-perl \
            libwww-perl libhtml-parser-perl git

      - name: Clone XMLTV repo
        run: |
          git clone https://github.com/XMLTV/xmltv.git
          cd xmltv

      - name: Build and install XMLTV (including tv_grab_il)
        run: |
          cd xmltv
          perl Makefile.PL
          make
          sudo make install
          which tv_grab_il

      - name: Generate EPG using tv_grab_il
        run: |
          mkdir -p epg
          tv_grab_il --output epg/epg_il.xml --days 3 --quiet

      - name: Commit generated EPG
        uses: stefanzweifel/git-auto-commit-action@v4
        with:
          commit_message: "🗓️ Daily Israel EPG"
          file_pattern: epg/epg_il.xml
